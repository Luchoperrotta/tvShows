<p id="notice"><%= notice %></p>

<h1>Generos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nro de series</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @generes.each do |genere| %>
      <tr>
        <td><%= genere.name %></td>
        <td>
          <% if genere.film.count == 0 %>
            <%= genere.film.count %>
          <% else %>
            <%= link_to genere.film.count, films_path(:genere_id => genere.id) %>
          <% end %>
			  <td>
        <td><%= link_to 'Show', genere %></td>
        <td><%= link_to 'Edit', edit_genere_path(genere) %></td>
        <td><%= link_to 'Destroy', genere, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

